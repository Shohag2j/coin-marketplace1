        // Function to fetch live cryptocurrency prices
        async function fetchCryptoPrices() {
            const url = 'https://api.coingecko.com/api/v3/simple/price?ids=bitcoin,ethereum,litecoin,solana,cardano,ena,gala,polkadot,binancecoin&vs_currencies=usd';
            try {
                const response = await fetch(url);
                const data = await response.json();

                if (data.bitcoin && data.bitcoin.usd) {
                    document.getElementById('btc-price').innerText = `ржорзВрж▓рзНржп: $${data.bitcoin.usd.toFixed(2)}`;
                }
                if (data.ethereum && data.ethereum.usd) {
                    document.getElementById('eth-price').innerText = `ржорзВрж▓рзНржп: $${data.ethereum.usd.toFixed(2)}`;
                }
                if (data.litecoin && data.litecoin.usd) {
                    document.getElementById('ltc-price').innerText = `ржорзВрж▓рзНржп: $${data.litecoin.usd.toFixed(2)}`;
                }
                if (data.solana && data.solana.usd) {
                    document.getElementById('sol-price').innerText = `ржорзВрж▓рзНржп: $${data.solana.usd.toFixed(2)}`;
                }
                if (data.cardano && data.cardano.usd) {
                    document.getElementById('ada-price').innerText = `ржорзВрж▓рзНржп: $${data.cardano.usd.toFixed(2)}`;
                }
                if (data.ena && data.ena.usd) {
                    document.getElementById('ena-price').innerText = `ржорзВрж▓рзНржп: $${data.ena.usd.toFixed(2)}`;
                }
                if (data.gala && data.gala.usd) {
                    document.getElementById('gala-price').innerText = `ржорзВрж▓рзНржп: $${data.gala.usd.toFixed(2)}`;
                }
                if (data.polkadot && data.polkadot.usd) {
                    document.getElementById('dot-price').innerText = `ржорзВрж▓рзНржп: $${data.polkadot.usd.toFixed(2)}`;
                }
                if (data.binancecoin && data.binancecoin.usd) {
                    document.getElementById('bnb-price').innerText = `ржорзВрж▓рзНржп: $${data.binancecoin.usd.toFixed(2)}`;
                }
            } catch (error) {
                console.error('Failed to fetch crypto prices:', error);
                document.getElementById('btc-price').innerText = 'ржорзВрж▓рзНржп рж▓рзЛржб ржмрзНржпрж░рзНрже рж╣ржпрж╝рзЗржЫрзЗред';
                document.getElementById('eth-price').innerText = 'ржорзВрж▓рзНржп рж▓рзЛржб ржмрзНржпрж░рзНрже рж╣ржпрж╝рзЗржЫрзЗред';
                document.getElementById('ltc-price').innerText = 'ржорзВрж▓рзНржп рж▓рзЛржб ржмрзНржпрж░рзНрже рж╣ржпрж╝рзЗржЫрзЗред';
                document.getElementById('sol-price').innerText = 'ржорзВрж▓рзНржп рж▓рзЛржб ржмрзНржпрж░рзНрже рж╣ржпрж╝рзЗржЫрзЗред';
                document.getElementById('ada-price').innerText = 'ржорзВрж▓рзНржп рж▓рзЛржб ржмрзНржпрж░рзНрже рж╣ржпрж╝рзЗржЫрзЗред';
                document.getElementById('ena-price').innerText = 'ржорзВрж▓рзНржп рж▓рзЛржб ржмрзНржпрж░рзНрже рж╣ржпрж╝рзЗржЫрзЗред';
                document.getElementById('gala-price').innerText = 'ржорзВрж▓рзНржп рж▓рзЛржб ржмрзНржпрж░рзНрже рж╣ржпрж╝рзЗржЫрзЗред';
                document.getElementById('dot-price').innerText = 'ржорзВрж▓рзНржп рж▓рзЛржб ржмрзНржпрж░рзНрже рж╣ржпрж╝рзЗржЫрзЗред';
                document.getElementById('bnb-price').innerText = 'ржорзВрж▓рзНржп рж▓рзЛржб ржмрзНржпрж░рзНрже рж╣ржпрж╝рзЗржЫрзЗред';
            }
        }

        // Fetch prices on page load and then every 5 seconds
        window.onload = function() {
            fetchCryptoPrices();
